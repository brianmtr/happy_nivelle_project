<div class="header-image-events-show">
  <%= image_tag("header-events.png", :alt => "logo_facebook") %>
</div>
<p id="notice"><%= notice %></p>
  <div class= "vote">
      <p><%= @vote_participated %> Présents</p>
      <p><%= @vote_maybe_participated%> Peut-être</p>
      <p><%= @vote_not_participated%> Absents</p>
  </div>
<p>
  <strong>Titre:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date.to_formatted_s(:long) %>
</p>

<p>
  <strong>Adresse:</strong>
  <%= @event.address %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p class="image-show">
  
  <scope="col"><%= image_tag @event.image_url, height: 200 if @event.image %>
</p>


<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Supprimer', @admin_event_path, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %>
<% end %>

<%= link_to 'Retour', events_path %>
