<div class="card" style="width: 60%; margin-left: 20%">
  <div class="card-header" id="headingOne">       
      <% if user_signed_in? %>
        <%= link_to 'Je participe', events_url, method: :participate, :class => "btn btn-success" %>
        <%= link_to 'Peut-être', events_url, method: :validate, :class => "btn btn-warning" %>
        <%= link_to 'Je ne participe pas',events_url, method: :validate, :class => "btn btn-danger" %>
      <% end %>
      <br>
      <br>
      <scope="col"><%= image_tag event.image_url, height: 200 if event.image %><br>
      <scope="col">Titre: <%= event.title %><br>
      <scope="col">Date: <%= event.date %><br>
      <scope="col">Adresse: <%= event.adress %><br><br>
      <scope="col">Description:<br> <%= event.description %><br>

      <%= link_to 'Voir évenement', events_path(@event) %>
  </div>
</div>
<br>


