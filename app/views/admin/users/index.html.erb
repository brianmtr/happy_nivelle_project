<h1 class="title-admin-event">Utilisateurs</h1>
<div class="treuc">
    <% @users.each do |user| %>

    <ul class="list-group">

        <% if user.admin === true %>

        <li class="list-group-item" aria-current="true" style="background-color: red">
            <strong style="color: white">Admin</strong>
        </li>

        <% else %>
        <li class="list-group-item active" aria-current="true">
            <strong>Utilisateur classique</strong>
        </li>
        <% end %>
        <li class="list-group-item">
            <a><%= user.firstname %></a>
            <a><%= user.lastname %></a>
            <a><%= user.email %></a>

            <%= link_to 'Changer rôle', role_admin_user_path(user), method: :put, data: { confirm: 'Êtes-vous sûr ? Un utilisateur classique ne pourra pas accèder au panneau d\'administration.' } %>
        </li>

    </ul>
    <br>
    <% end %>
</div>