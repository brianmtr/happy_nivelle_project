<h1 class="title-admin-event">Utilisateurs</h1>

<% @users.each do |user| %>

<ul class="list-group">
    <li class="list-group-item active" aria-current="true" style="width: 80%; margin-left: 10%">
        <% if user.admin === true %>
        <strong>Admin</strong>
        <% else %>
        <strong>Utilisateur classique</strong>
        <% end %>
    </li>
    <li class="list-group-item" style="width: 80%; margin-left: 10%">
        <%= user.firstname %>
        <br>
        <%= user.lastname %>
        <br>
        <%= user.email %>
        <br>

        <%= link_to 'Changer rôle', role_admin_user_path(user), method: :put, data: { confirm: 'Êtes-vous sûr ? Un utilisateur classique ne pourra pas accèder au panneau d\'administration.' } %>

    </li>

</ul>
<br>
<% end %>