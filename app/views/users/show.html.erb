<% if current_user %>
<h2 class="items-center">Mon profil</h2>


<div class="items-center">
<h2>Bonjour <%= @user.firstname %> :)</h2>
</div>
<div class="field">
<p>Votre adresse E-mail est : <%= @user.email %></p>
</div>

<div class="field">
<p>Votre compte a été crée le : <%= @user.created_at.to_formatted_s(:db) %></p>
</div>


<div class="field">
<p>Les évènements auxquels je participe : </p>
<% @events.each do |event| %>

    <% if event.user_events.where(state: "yes", user_id: current_user).exists? %>
        <div class="cards">
            <div class="card-headers" id="headingOne">
                <strong>
                    <p class="test"><%= event.title %></p>
                </strong>
                <p class="test"><%= event.date %></p>
                <button class="button-agenda">
                    <%= link_to 'Voir événement', event_path(event.id) %>
                </button>
            </div>
        </div>
        <% else %>
        <% end %>
        <% end %>
</div>




<div class="items-center">
<a href="/users/edit"><button>Éditer mon compte</button></a>
</div>

<%end%>