    </head>
  <body>
  <header>
    <div class ="contact-bar">
    <div class="logo">
      <%= image_tag("logo-hpn.png", :alt => "logo_happy_nivelle") %>

    </div>
    <div class="item-contact-bar">
      <ul class="position-bar">
        <li class="item_contact_bar">
        <div class="image-center-contact-bar">
          <%= image_tag("logo_mail.png", :alt => "logo_mail") %>
          <p class="item-text">exemple.test@hotmail.fr</p>
        </div>
          
        </li>
        <li class="item_contact_bar">
        <div class="image-center-contact-bar">
          <%= image_tag("logo-phone.png", :alt => "logo_phone") %>
          <p class="item-text">+33 (0)7.10.20.30.40</p>
         </div>
          
        </li>
        <li>
      <a href="https://www.facebook.com/Happy-Nivelle-102181868489269">
          <%= image_tag("logo-facebook.png", :alt => "logo_facebook") %>
          </a>
        </li>
        <li class="connexion">
          <% if user_signed_in? %>
            <%= link_to 'Déconnexion', destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to 'Connexion', new_user_session_path %>
          <% end %>
        </li> 
        <li class="li-ham">
          <button class="ham"><%= image_tag("burger.png", :alt => "logo_facebook") %></button>
        </li>

      </ul>  
      </div> 
    </div>
    <nav class="nav-ham mobile" >
      <div class="container">
        <ul class="navbar">
          <li><a class ="menuLink" href="/">Accueil</a></li>
          <li><a class ="menuLink" href="/about/index">À propos</a></li>
          <li><a class ="menuLink" href="/events">Boite à idées</a></li>
          <li><a class ="menuLink" href="/agenda/index">Agenda</a></li>       
          <li><a class ="menuLink" href="/contacts/new">Contact</a></li>
          <% if user_signed_in? && current_user.admin? %>
          <li>
          <a class ="" href="/admin/events">Admin</a>
          </li>
          <% end %>

           <li><a class ="" href="/users/edit">Mon compte</a></li>
    
        </ul>
      </div>

    </nav>
    <nav class="pc" >
     <ul class="navbar">
          <li><a class ="menuLink" href="/">Accueil</a></li>
          <li><a class ="menuLink" href="/about/index">À propos</a></li>
          <li><a class ="menuLink" href="/events">Boite à idées</a></li>
          <li><a class ="menuLink" href="/agenda/index">Agenda</a></li>       
          <li><a class ="menuLink" href="/contacts/new">Contact</a></li>
          <% if user_signed_in? && current_user.admin? %>
          <li>
          <a class ="menuLink" href="/admin/events">Admin</a>
          </li>
          <% end %>

           <li><a class ="menuLink" href="/users/edit">Mon compte</a></li>
    
        </ul>
        </nav>
    <div class="covid_band">
      <p>Les événements peuvent être annulés en raison du COVID-19</p>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
</header>
  
           
      </ul>
    </div>
  </div>

    <div class="header-image">
    <p class="title">Happy Nivelle</p>
    <p class="subtitle">Association d’évènementielle</p>
    <p class="catch_phrase">Organisateur de soirée a thème, weekend , et voyage à modifier...</p>
      <% if current_page? ('/') %>
        <%= image_tag("header-home.png", :alt => "logo_facebook") %>
      <% elsif current_page? ('/events') || ('/events/new') %>
        <%= image_tag("header-events.png", :alt => "logo_facebook") %>
      <% elsif current_page? ('/about/index') %>
        <%= image_tag("header-about.png", :alt => "logo_facebook") %>
      <% elsif current_page? ('/agenda/index') %>
        <%= image_tag("header-agenda.png", :alt => "logo_facebook") %>
      <% elsif current_page? ('/users/sign_in') %>
              <%= image_tag("header-sign_in.png", :alt => "logo_facebook") %>
      <% elsif current_page? ('/users/sign_up') %>
              <%= image_tag("header-sign_in.png", :alt => "logo_facebook") %>
      <% elsif current_page? ('/users/edit') %>
              <%= image_tag("header-sign_in.png", :alt => "logo_facebook") %>
      <% elsif current_page? ('/contacts/new') %>
              <%= image_tag("header-contact.png", :alt => "logo_facebook") %>
      <% elsif current_page? (new_event_path) %>
              <%= image_tag("header-events.png", :alt => "logo_facebook") %>
      <% elsif current_page? ('/users/confirmation/new.user') %>
              <%= image_tag("header-sign_in.png", :alt => "logo_facebook") %>
      <% elsif current_page? ('/users/password/new') %>
              <%= image_tag("header-sign_in.png", :alt => "logo_facebook") %>
    <% else current_page? %>
    <%= image_tag("errors.png", :alt => "errors_image") %>
    <% end %>
      

     </div>


    <%= yield %>
        
<footer>
<div class="logo-footer">
  <%= image_tag("logo-hpn.png", :alt => "logo_facebook") %>
</div>
