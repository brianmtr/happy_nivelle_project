  <% @events.each do |event| %>
  <% if event.status === 'proposed' %>
   <h2>Les évent proposés</h2> 
 
  <% elsif event.status === 'accepted' %>
    <h2>Les évent acceptés</h2>

  <% elsif event.status === 'past' %>
    <h2>Les évent passés</h2>
  <% end %>
  
  <% if event.status === 'proposed' || event.status === 'accepted' || event.status === 'past' %>

  
  <table class="table table-striped">
  <tbody>
    <div id="accordion">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <%= event.title %> <br>
                        <%= link_to 'Voir évenement', events_path(event.id) %>
                    </button>
                </h5>
            </div>
        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                <scope="col">Titre: <%= event.title %><br>
                <scope="col">Date: <%= event.date %><br>
                <scope="col">Adresse: <%= event.adress %><br><br>
                <scope="col">Description:<br> <%= event.description %><br>
                <scope="col">Image: <%= image_tag event.image_url, height: 200 if event.image %><br>
            </div>
        </div>
        </div>
    </div>
  </tbody>
</table>
<% end %>
<% end %>